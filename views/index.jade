extends layout

block content
  div#AppCtrl.container-fluid
    div.row
      div.col-md-6
        errors(v-show="errors.show", type="danger", title="{{ errors.alert.title }}", html="{{ errors.alert.html }}")

        form
          div.input-group
            input.form-control(type="text", v-model="newPlayerName")
            div.input-group-btn
              button.btn.btn-primary(v-on="click: addNewPlayer($event)") Add
              button.btn.btn-default(v-on="click: loadAll($event)") Whole Office

      div.col-md-6
        div.input-group
          div.input-group-btn
            button.btn.btn-primary(v-on="click: formTeams()") Form Teams
            button.btn.btn-danger(v-on="click: resetTeams()") Reset Teams

    div.row
      div.col-md-6
        table.table.table-hover
          thead
            tr
              th Player Name
              th
          tbody
            tr(v-repeat="player : players | orderBy player")
              td {{ player }}
              td
                button.btn.btn-danger.btn-xs(v-on="click: removePlayer(player)") Remove

      div.col-md-6
        table.table.table-hover
          thead
            tr
              th Team
              th
          tbody
            tr(v-repeat="team : teams | orderBy team.name ")
              td {{ team.name }}
              td {{ team.players }}

  script(src='https://code.jquery.com/jquery-1.11.3.min.js')
  script(src='js/lib/lodash-3.10.1.js')
  script(src='js/lib/vue.dev.js')
  script(src='js/app.js')